# ------------------------------------------------------------------------------
# NextAuth.js
# ------------------------------------------------------------------------------
# URL da sua aplicação (será gerado pela Vercel)
# Exemplo: https://seu-projeto.vercel.app
NEXTAUTH_URL=https://seu-projeto.vercel.app

# Secret para JWT (GERAR COM: openssl rand -base64 32)
# Execute no terminal: openssl rand -base64 32
# Cole o resultado abaixo:
NEXTAUTH_SECRET=cole_aqui_o_secret_gerado_32_caracteres_minimo

# ------------------------------------------------------------------------------
# App Configuration
# ------------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=https://seu-projeto.vercel.app
NODE_ENV=production

